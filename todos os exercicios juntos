15-----------------------------------

programa {

  

  funcao inicio() {

    inteiro numeros[4]={2,4,6,8}

    inteiro total=0

     

    soma(total,numeros)

    escreva(total)



    

  }



  funcao inteiro soma(inteiro &total ,inteiro numeros[]){

    

    para(inteiro i=0;i<4;i++){

      total=total+numeros[i]

    }

    retorne total

    }

}

16----------------------------

programa {

  

  funcao inicio() {

      

    inteiro numeros[4]={2,4,6,8}

    inteiro total=0

     

    soma(total,numeros)

    escreva(total)



    

  }



  funcao inteiro soma(inteiro &total ,inteiro numeros[]){

    

    para(inteiro i=0;i<4;i++){

      total=total+numeros[i]

    }

    total = total/4

    retorne total

    }

}

17------------------------------

programa {

	funcao inicio() {

	    inteiro numeros[10]={12,20,30,40,123,146,345,654,12345,7654}

	    inteiro mn=0

		maior(numeros,mn)

		escreva(maior(numeros,mn))

	}

	

	funcao inteiro maior(inteiro numeros[],inteiro mn){

	    para(inteiro i=0;i<9;i++){

	        

	        se(numeros[i]>numeros[i+1]){

	            mn=numeros[i]

	        }

	   }

	   retorne mn

	}

}

18----------------------------------------

programa {

	funcao inicio() {

	    inteiro numeros[10]={5,2,8,3,1,7,0,9,4,6}

	    inteiro mn=0

		maior(numeros,mn)

		para(inteiro i=0;i<10;i++){

		    escreva(numeros[i])

		}

	}

	

	funcao  maior(inteiro &numeros[],inteiro mn){

	    

	     para(inteiro j=0;j<9;j++){

	      para(inteiro i=0;i<9;i++){

	        se(numeros[i]>numeros[i+1]){

	            mn=numeros[i]

	            numeros[i]=numeros[i+1]

	            numeros[i+1]=mn

	            }

	         }

	    }

	            

	            

	            

	      }

	   

	

}
